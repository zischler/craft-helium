{% extends '_layout' %}

{% set title = 'Home' %}


{% block hero %}
	{#Home Hero#}
	<div class="o-section o-hero">
		{% include "_includes/heroImage.twig" %}
	</div>
{% endblock %}

{% block content %}
	<div class="main mt-0 pt-12">
		<section class="o-section">
			<div class="o-group">
            	<h1>Craft Helium</h1>
			</div>
		</section>

		{% for component in entry.components.level(1).all() %}
			{% include "_components/" ~ component.type %}
		{% endfor %}

		<section class="o-section has-background bg-gray-200">
			<div class="o-group">
				<h2>News Example</h2>
				{% set newsQuery = craft.entries()
                    .section('news')
                    .orderBy('postDate desc')
					.limit(3) %}
				{% set newsPages = newsQuery.all() %}
				{% for newsPage in newsPages %}
					{% include "_includes/newsTeaser" %}
				{% endfor %}
			</div>
		</section>
	</div>
{% endblock %}

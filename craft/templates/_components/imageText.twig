{% set media = module.image %}

{% set isreversed = "" %}
{% if module.imagePosition == "right" %}
    {% set isreversed = "flex-row-reverse" %}
{% endif %}
<div class="o-component module-image-text">
    <div class="flex flex-wrap has-gutter {{ isreversed }}">
        <div class="image-wrapper flex-1of1 md:flex-1of2">
            {% include "_includes/lazyMedia.twig" %}
        </div>
        <div class="flex-1of1 md:flex-1of2">
            {% include "_includes/text.twig" %}
        </div>
    </div>
</div>

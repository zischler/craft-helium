{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["webworker", "es2015", "es2016", "es2017", "esnext"],
    "module": "none",
    "noFallthroughCasesInSwitch": true,
    "outDir": "../../magnolia/light-modules/helium/webresources/workers/",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "target": "es5",
    "plugins": [
      { "name": "tslint-language-service" }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.bak.*"
  ]
}
